Resources:
  AWSEBAutoScalingGroup:
    Metadata:
      AWS::CloudFormation::Authentication:
        S3Auth:
          type: "s3"
          buckets: ["sampl-league-config"]
          roleName:
            "Fn::GetOptionSetting":
              Namespace: "aws:autoscaling:launchconfiguration"
              OptionName: "IamInstanceProfile"
              DefaultValue: "aws-elasticbeanstalk-ec2-role"
files:
  "/etc/sampl_rds_config.json":
    mode: "000400"
    owner: webapp
    group: webapp
    authentication: "S3Auth"
    source: https://sampl-league-config.s3.us-east-2.amazonaws.com/sampl_rds_config.json
